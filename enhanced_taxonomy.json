            "\\blearn\\s+more\\b",
            "\\bread\\s+more\\b",
            "\\bclick\\s+here\\b",
            "\\bvisit\\s+our\\s+website\\b",
            "\\bcontact\\s+us\\b",
            "\\bsales\\s+team\\b",
            "\\bmarketing\\s+team\\b"
          ],
          "weight": -2,
          "case_sensitive": false
        },
        
        "corporate_terms": {
