{
    "version": "1.0",
    "description": "Enhanced taxonomy for personal blog classification with weighted scoring and structural indicators",
    
    "domain_patterns": {
      "high_confidence_positive": {
        "patterns": [
          "github.io",
          "netlify.app", 
          "vercel.app",
          "hashnode.dev",
          "dev.to",
          "substack.com",
          "medium.com/@",
          "tumblr.com"
        ],
        "weight": 5,
        "description": "Strong indicators of personal blogs"
      },
      
      "medium_confidence_positive": {
        "patterns": [
          "wordpress.com",
          "blogspot.com"
        ],
        "weight": 2,
        "description": "Platforms that can be personal or corporate"
      },
      
      "high_confidence_negative": {
        "patterns": [
          "blogspot.com/business",
          "wordpress.com/business", 
          "themeforest.net",
          "envato.com",
          "wix.com",
          "squarespace.com",
          "shopify.com",
          "amazon.com",
          "microsoft.com",
          "google.com",
          "apple.com",
          "facebook.com",
          "twitter.com",
          "linkedin.com",
          "forbes.com",
          "techcrunch.com",
          "wired.com",
          "theverge.com",
          "arstechnica.com",
          "engadget.com",
          "gizmodo.com",
          "mashable.com",
          "venturebeat.com",
          "zdnet.com",
          "cnet.com"
        ],
        "weight": -5,
        "description": "Strong indicators of corporate/commercial sites"
      }
    },
  
    "content_indicators": {
      "positive_regex": {
        "personal_pronouns": {
          "patterns": [
            "\\bmy\\s+(thoughts|experience|journey|story|blog|notes|learning|experiments|projects|research|findings|observations|insights|reflections)\\b",
            "\\bI\\s+(think|believe|feel|know|learned|discovered|found|realized|noticed|observed)\\b",
            "\\bin\\s+my\\s+(opinion|view|perspective|experience)\\b",
            "\\bfrom\\s+my\\s+(perspective|experience|point\\s+of\\s+view)\\b"
          ],
          "weight": 1,
          "case_sensitive": false
        },
        
        "personal_identity": {
          "patterns": [
            "\\babout\\s+me\\b",
            "\\babout\\s+the\\s+author\\b", 
            "\\bpersonal\\s+blog\\b",
            "\\bauthor\\s+bio\\b",
            "\\bcontact\\s+me\\b",
            "\\bfollow\\s+me\\s+on\\b",
            "\\bmy\\s+(twitter|github|linkedin|portfolio|website)\\b"
          ],
          "weight": 2,
          "case_sensitive": false
        }
      },
      
      "negative_regex": {
        "marketing_terms": {
          "patterns": [
            "\\bsponsored\\s+post\\b",
            "\\badvertisement\\b",
            "\\bpromoted\\s+content\\b",
            "\\baffiliate\\s+link\\b",
            "\\bbuy\\s+now\\b",
            "\\bshop\\s+now\\b",
            "\\blimited\\s+time\\s+offer\\b",
            "\\bdiscount\\s+code\\b",
            "\\bcoupon\\s+code\\b",
            "\\bfree\\s+trial\\b",
